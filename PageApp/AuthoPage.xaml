<Page x:Class="DVDyyy.PageApp.AuthoPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DVDyyy.PageApp"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="1200" MinHeight="700" MinWidth="1200"
      Title="Авторизация" Background="SlateGray">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="7*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Border Background="WhiteSmoke" Grid.Row="1" Grid.Column="1" CornerRadius="20">
            <StackPanel VerticalAlignment="Center" Margin="20">
            <Label Content="АВТОРИЗАЦИЯ"/>
            <TextBlock x:Name="txtLogin" Text="Логин"/>
            <TextBox x:Name="txbLogin"/>
            <TextBlock x:Name="txtPasswprd" Text="Пароль"/>
            <PasswordBox x:Name="txbPassword"/>
                <Border Background="Black" CornerRadius="10" Margin="10">
                    <Button Content="Вход" Click="ClEventAuto"/>
                </Border>
            </StackPanel>
        </Border>
    </Grid>
</Page>
